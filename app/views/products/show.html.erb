<div class="container proview">
<p id="notice"><%= notice %></p>
  <div class="row">
    <h2>
        <%= @product.name %>
      </h2>
    <div class="col-xs-6">
      <p>
        <%= image_tag(@product.image_url, class: "img-responsive") %>
      </p>
    </div>
    <div class="col-xs-6 description">
      <p>
        <strong>Description:</strong><br />
        <%= @product.description %>
      </p>

      <p>
        <strong>Colour:</strong>
        <%= @product.colour %><br />
        <strong>Price:</strong>
        <%= @product.price %>
      </p>
      <p><%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>
      </p>
    </div>   
  </div>
</div>